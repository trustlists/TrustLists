{
  "openapi": "3.0.0",
  "info": {
    "title": "TrustLists API",
    "description": "API for accessing company trust center data",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://trustlists.org/api",
      "description": "Production server (static files)"
    }
  ],
  "paths": {
    "/trust-centers": {
      "get": {
        "summary": "Get trust centers",
        "description": "Retrieve all trust centers or search by company name",
        "operationId": "getTrustCenters",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search query to filter trust centers by name",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {"type": "string"},
                          "website": {"type": "string"},
                          "trustCenter": {"type": "string"},
                          "platform": {"type": "string"},
                          "iconUrl": {"type": "string"}
                        }
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "total": {"type": "integer"},
                        "generated": {"type": "string"},
                        "version": {"type": "string"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/stats": {
      "get": {
        "summary": "Get statistics",
        "description": "Get aggregated statistics about the trust center directory",
        "operationId": "getStats",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "totalCompanies": {"type": "integer"},
                    "generated": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
