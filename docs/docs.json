{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "TrustLists",
  "colors": {
    "primary": "#2563eb",
    "light": "#3b82f6",
    "dark": "#1d4ed8"
  },
  "favicon": "favicon.svg",
  "api": {
    "baseUrl": "https://trustlists.org/api",
    "auth": {
      "method": "none"
    },
    "playground": {
      "display": "interactive"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "API Reference",
            "pages": [
              {
                "page": "Get trust centers",
                "openapi": "api.json",
                "operationId": "getTrustCenters"
              },
              {
                "page": "Get statistics", 
                "openapi": "api.json",
                "operationId": "getStats"
              }
            ]
          },
          {
            "group": "Contributing",
            "pages": [
              "contributing/guidelines",
              "contributing/adding-trust-centers"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "logo.svg",
    "dark": "logo.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@trustlists.org"
      }
    ],
    "primary": {
      "type": "button",
      "label": "View Trust Centers",
      "href": "https://trustlists.org"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/FelixMichaels/TrustLists",
      "linkedin": "https://linkedin.com/company/trustlists"
    }
  }
}
